<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:ignore="MissingPrefix"
    android:layout_height="300dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_6sdp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/good_imgCircleImage"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/account_circle_black"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_8sdp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>


            <TextView
                android:id="@+id/good_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="جوجه کباب"
                fontPath="fonts/SansLight.ttf"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/Black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/good_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="توضیحات"
                fontPath="fonts/SansLight.ttf"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/GrayDark"
                android:layout_below="@id/good_title"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_65sdp"
                android:maxLines="2"/>


          <LinearLayout
              android:id="@+id/good_linear"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginBottom="@dimen/_2sdp"
              android:layout_marginLeft="@dimen/_8sdp"
              android:layout_below="@+id/good_imgCircleImage"
              android:layout_marginTop="@dimen/_3sdp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=" تومان"
                  fontPath="fonts/SansLight.ttf"
                  android:textSize="@dimen/_10sdp"
                  android:textColor="@color/GrayDark" />

              <TextView
                  android:id="@+id/good_price_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="1000"
                  fontPath="fonts/SansLight.ttf"
                  android:textSize="@dimen/_10sdp"
                  android:textColor="@color/GrayDark" />

              <TextView
                  android:id="@+id/good_price_txt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="قیمت  "
                  fontPath="fonts/SansLight.ttf"
                  android:textSize="@dimen/_10sdp"
                  android:textColor="@color/GrayDark" />


          </LinearLayout>

            <LinearLayout
                android:id="@+id/good_linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_below="@+id/good_linear"
                android:layout_marginTop="@dimen/_3sdp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    fontPath="fonts/SansLight.ttf"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/GrayDark" />

                <TextView
                    android:id="@+id/good_discount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    fontPath="fonts/SansLight.ttf"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/GrayDark" />

                <TextView
                    android:id="@+id/good_discount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تخفیف  "
                    fontPath="fonts/SansLight.ttf"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/GrayDark" />

            </LinearLayout>

            <View
                android:id="@+id/good_horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/horizontal"
                android:layout_below="@+id/good_linear2"
                android:layout_marginTop="@dimen/_3sdp"/>


        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/good_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_below="@+id/good_horizontal_line">

        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>